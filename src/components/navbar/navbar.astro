---
import Container from "@components/container.astro";
import Link from "@components/ui/link.astro";
import Dropdown from "./dropdown.astro";
import { Astronav, MenuItems, MenuIcon } from "astro-navbar";
import { Image } from 'astro:assets';
// import Logo from '../../assets/img/Logo.png';
import Logo from '../../assets/img/Logo.png';

const menuitems = [
  {
    title: "Products",
    path: "/evolvx/",
    children: [
    { title: "Industrial Labels & Stickers", path: "/evolvx/stickers" },
      { title: "Hardware Supply", path: "/evolvx/hardware" },
      { title: "Electrical Assemblies", path: "/evolvx/electrical" },
    
  
    ],
  },
  {
    title: "Why ChooseÂ Us",
    path: "/evolvx/whyus",
    type: "whyus",
  },
 
  {
    title: "Blog",
    path: "/evolvx/blog",
    type:"blog"
  },
  {
    title: "Contact Us",
    path: "/evolvx/contact",
    type: "contactus",
  },

  // {
  //   title: "About",
  //   path: "/about",
  // },  




];
---


<Container>
  <header class="flex flex-col lg:flex-row  justify-between items-center my-5">
    <Astronav>
      <div class="flex w-full lg:w-auto items-center justify-between">
        <Link href="/evolvx/" style="inverted">
                      <Image src={Logo} alt="A bird sitting on a nest of eggs." width="250" />

                    </Link>

        <div class="block lg:hidden">
          <MenuIcon class="w-4 h-4 text-gray-800" />
        </div>
      </div>
      <MenuItems class="hidden w-full lg:w-auto mt-2 lg:flex lg:mt-0">
        <ul class="flex flex-col lg:flex-row lg:gap-3">
          {
            menuitems.map((item, index) => (
              <>
                {item.children && (
                  <Dropdown
                    title={item.title}
                    children={item.children}
                    lastItem={index === menuitems.length - 1}
                  />
                )}

                {!item.children && item.type!='contactus' && (
                  <li >
                    <a
                      href={item.path}
                      class="flex lg:px-3 py-2 items-center text-gray-600 hover:text-gray-900">
                      <span> {item.title}</span>
                      {item.badge && (
                        <span class="ml-1 px-2 py-0.5 text-[10px] animate-pulse font-semibold uppercase text-white bg-indigo-600 rounded-full">
                          New
                        </span>
                      )}
                    </a>
                  </li>
                )}
                       {item.type==='contactus' && (
                  <li >
                    <a
                      href={item.path}
                      class="flex lg:px-2 py-2 items-center text-gray-900 hover:text-gray-900">
                   
                       <button type="button" class="btn-bg-color bgn-text-color  hover:bg-gradient-to-bl focus:ring-4 focus:outline-none  font-medium rounded-lg text-sm px-2 py-1.5 text-center me-2 mb-2">    <span class="ml-1 px-1 py-0.5 text-[15px]  font-bold  rounded-full">
                          Contact us
                        </span></button>

                      
                    </a>
                  </li>
                )}
                

                
              </>
            ))
          }
        </ul>
        <!-- <div class="lg:hidden flex items-center mt-3 gap-4">
          <Link href="#" style="muted" block size="md">Log in</Link>
          <Link href="#" size="md" block>Sign up</Link>
        </div> -->
      </MenuItems>
    </Astronav>
    <!-- <div>
      <div class="hidden lg:flex items-center gap-4">
        <a href="#">Log in</a>
        <Link href="#" size="md">Sign up</Link>
      </div>
    </div> -->
  </header>
</Container>
<style>
  .btn-bg-color{
    background-color: #00B6F0 !important;
  }
  .btn-text-color{
    color:#5B5B5B !important;
  }
</style>